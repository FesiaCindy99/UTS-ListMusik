<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bgf3">

    <TextView
        android:id="@+id/tfUserLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/log_out1"
        android:onClick="onClickLogout"/>

    <Button
        android:id="@+id/open_Music_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50pt"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:onClick="openMusic"
        android:text="@string/button_Music"
        android:background="@drawable/gradient"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/open_about_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:onClick="openAbout"
        android:layout_gravity="center"
        android:text="@string/button_about"
        android:background="@drawable/gradient"
        android:textStyle="bold"/>

</LinearLayout>